[deployment]
deploymentTarget = "cloudrun"
run = ["node", "./dist/index.cjs"]
# ALTERAÇÃO AQUI: Usando 'esbuild' em vez de 'tsc'. Isso ignora erros de tipos e força o build.
build = [
  "sh",
  "-c",
  "vite build && npx esbuild server/index.ts --platform=node --packages=external --bundle --format=cjs --outfile=dist/index.cjs",
]
publicDir = "dist/public"

